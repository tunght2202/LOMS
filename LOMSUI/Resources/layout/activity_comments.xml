<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

	<ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

			<!-- LiveStream ID Input and Button -->
			<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

				<EditText
                    android:id="@+id/txtLiveStreamId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Nhập ID Livestream"
                    android:inputType="text"/>

				<Button
                    android:id="@+id/btnFetchComments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lấy"
					android:backgroundTint="#00bfff"
                    android:layout_marginLeft="8dp"/>
			</LinearLayout>

			<!-- Product Code Input and Button -->
			<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
              >

				<EditText
                    android:id="@+id/txtProductCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
					  android:visibility="gone"
                    android:hint="Nhập mã sản phẩm"
                    android:inputType="text"/>

				<Button
                    android:id="@+id/btnFilterByProductCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lọc"
					android:backgroundTint="#00bfff"
					android:visibility="gone"
                    android:layout_marginLeft="8dp"/>
			</LinearLayout>

			<TextView
                android:id="@+id/txtNoComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Không có bình luận nào!"
                android:textSize="16sp"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="16dp"/>
		</LinearLayout>
	</ScrollView>

	<androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewComments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"/>
</LinearLayout>
