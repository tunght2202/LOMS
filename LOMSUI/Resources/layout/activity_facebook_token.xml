<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00a880"
        android:gravity="center">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/logo_loms" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18sp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Page"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etPageId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Page code" />
        <Button
            android:id="@+id/updatePageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Page"
            android:layout_marginTop="18dp"
            android:backgroundTint="#1FD872"
            android:layout_gravity="bottom"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="18sp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Tokens"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etTokenCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Token code" />
        <Button
            android:id="@+id/updateTokenButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Token"
            android:layout_marginTop="18dp"
            android:backgroundTint="#427A9F"
            android:layout_gravity="bottom"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>

    <!--    <include layout="@layout/layout_bottom_nav" />
    -->
</LinearLayout>