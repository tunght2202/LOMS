<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#E0F7DA" android:padding="12dp"
    android:layout_marginBottom="8dp"> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">




        <TextView
            android:id="@+id/customerNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nguyễn Văn A"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2E7D32" /> 
        <TextView
            android:id="@+id/orderStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chờ xác nhận"
            android:textSize="14sp"
            android:textColor="#F9A825" /> 
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/productImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
           /> 
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/productNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chuột gaming x11"
                android:textSize="14sp"
                android:textColor="#212121" /> <TextView
                android:id="@+id/productQuantityTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="x1"
                android:textSize="12sp"
                android:textColor="#757575" /> <TextView
                android:id="@+id/totalAmountTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="400.000"
                android:textSize="14sp"
                android:textColor="#D32F2F" /> 
                <TextView
                android:id="@+id/totalItemsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tổng số tiền (1 sản phẩm): 400.000"
                android:textSize="12sp"
                android:textColor="#757575" /> 
        </LinearLayout>

    </LinearLayout>

</LinearLayout>