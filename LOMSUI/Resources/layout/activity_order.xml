<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomNavLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00a880"
        android:gravity="center">

		<ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/logo_loms" />

	</LinearLayout>
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
		android:orientation="horizontal"
        android:background="#00a880">

		<LinearLayout
            android:id="@+id/PendingLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="8dp"
			android:background="@drawable/footer_tab_background"
            android:focusable="true"
            android:gravity="center">
			<TextView
                android:id="@+id/txtPending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pending"
				android:textColor="@android:color/white"
                android:textSize="14sp" />
		</LinearLayout>

		<LinearLayout
            android:id="@+id/ConfirmedLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
			android:background="@drawable/footer_tab_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center">

			<TextView
                android:id="@+id/txtConfirmed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirmed"
				android:textColor="@android:color/white"
                android:textSize="14sp" />
		</LinearLayout>

		<LinearLayout
            android:id="@+id/ShippedLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
			android:background="@drawable/footer_tab_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center">
			<TextView
                android:id="@+id/txtShipped"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipped"
				android:textColor="@android:color/white"
                android:textSize="14sp" />
		</LinearLayout>

		<LinearLayout
            android:id="@+id/DeliveredLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center"
		    android:background="@drawable/footer_tab_background"
            android:clickable="true"
            android:focusable="true">


			<TextView
                android:id="@+id/txtDelivered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delivered"
                android:textSize="14sp"
				android:textColor="@android:color/white"/>
		</LinearLayout>
		<LinearLayout
            android:id="@+id/CancelLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center"
			android:background="@drawable/footer_tab_background"
            android:clickable="true"
            android:focusable="true">


			<TextView
                android:id="@+id/txtCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Return"
                android:textSize="14sp"
				android:textColor="@android:color/white"/>
		</LinearLayout>
		<LinearLayout
            android:id="@+id/ReturnLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center"
			android:background="@drawable/footer_tab_background"
            android:clickable="true"
            android:focusable="true">


			<TextView
                android:id="@+id/txtReturn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textSize="14sp"
				android:textColor="@android:color/white"/>
		</LinearLayout>
	</LinearLayout>

	<TextView
        android:id="@+id/txtNoOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No orders!"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:visibility="gone" />
	
	<androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewOrders"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:scrollbars="vertical" />

</LinearLayout>
