            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Including email, Facebook username, phone number, address... used for the process of creating and managing orders."
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            android:textColor="#333333" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”¸ Intended use:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data is only used internally within the system to support order processing and customer care."
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            android:textColor="#333333" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”¸ Information Protection:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We use security measures to protect data from unauthorized access."
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            android:textColor="#333333" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”¸ Share information:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We do not share user information with third parties without permission."
            android:textSize="16sp"
            android:textColor="#333333" />

    </LinearLayout>
</LinearLayout>
