<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#00a880"
        android:padding="16dp">

        <TextView
            android:id="@+id/lomsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOMS"
            android:textSize="20sp"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/productListTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn sản phẩm để thêm vào danh sách"
            android:textSize="20sp"
            android:textColor="#000"
            android:gravity="center"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/productContentLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#ffffff"
        android:padding="16dp">

        <TextView
            android:id="@+id/noProductsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Không có sản phẩm nào"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <ListView
            android:id="@+id/productListView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:divider="#cccccc"
            android:dividerHeight="1dp"
            android:choiceMode="multipleChoice" />
    </LinearLayout>

    <Button
        android:id="@+id/addToSalesListButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm Vào Danh Sách"
        android:backgroundTint="#4CAF50"
        android:textColor="#fff"
        android:layout_margin="16dp" />

    <include layout="@layout/layout_bottom_nav" />

</LinearLayout>