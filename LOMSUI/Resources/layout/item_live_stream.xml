<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

	<LinearLayout
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

		<TextView
            android:id="@+id/txtStreamTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Tiêu đề livestream" />

		<TextView
            android:id="@+id/txtStreamStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ff4d4d"
            android:textSize="15sp"
            android:text="Trạng thái: Đang Live" />

		<TextView
            android:id="@+id/txtStreamStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Bắt đầu: 01-04-2025 10:00 AM" />
	</LinearLayout>

	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

		<Button
            android:id="@+id/viewURLStream"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:textSize="12sp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="View"
            android:textColor="@android:color/white" />
		<Button
            android:id="@+id/btnDeleteLiveStream"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:textSize="12sp"
            android:text="Xóa"
            android:backgroundTint="@android:color/holo_red_light"
            android:textColor="@android:color/white"
          />
	</LinearLayout>

</LinearLayout>
