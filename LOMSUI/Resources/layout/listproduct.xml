<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<!-- Header -->
	<LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#00a880"
        android:padding="16dp">

		<TextView
            android:id="@+id/lomsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOMS"
            android:textSize="20sp"
            android:textColor="#000"
            android:textStyle="bold" />

		<TextView
            android:id="@+id/productListTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danh sách sản phẩm"
            android:textSize="20sp"
            android:textColor="#000"
            android:gravity="center"
            android:layout_marginTop="8dp" />

	</LinearLayout>

	<!-- Nội dung chính: danh sách + trạng thái + nút thêm -->
	<LinearLayout
        android:id="@+id/productContentLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#ffffff"
        android:padding="16dp">

		<TextView
            android:id="@+id/noProductsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Không có sản phẩm nào"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

		<ListView
            android:id="@+id/productListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="#cccccc"
            android:dividerHeight="1dp" />

		<Button
            android:id="@+id/addProductButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Thêm sản phẩm mới"
            android:backgroundTint="#87CEEB"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp" />

	</LinearLayout>

	<!-- Footer -->
	<include layout="@layout/layout_bottom_nav" />

</LinearLayout>
